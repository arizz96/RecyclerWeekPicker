<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:clickable="true"
    android:background="#FFF">

    <RelativeLayout
        android:id="@+id/item_day_layout"
        android:layout_width="match_parent"
        android:layout_height="29dp">

        <TextView
            android:id="@+id/item_day_nameTxv"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_centerInParent="true"

            android:text="L"
            android:textSize="12sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

    <View
        android:id="@+id/item_day_currentDayView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/item_day_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/item_day_layout">

        <TextView
            android:id="@+id/item_day_numTxv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"

            android:text="9"
            android:textSize="16sp"
            android:gravity="center"
            android:textAlignment="gravity"
            />


    </RelativeLayout>


</RelativeLayout>